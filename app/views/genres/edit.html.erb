<div class="container">
  
<h1>ジャンル編集</h1>
<% if @genre.errors.any? %>
  <%= @genre.errors.count %>件のエラーが発生しました。
  <% @genre.errors.full_messages.each do |message| %>
    <li><%= message %></li>
  <% end %>
<% end %>

<% if flash[:notice] %>
  <%= flash[:notice] %>
<% end %>

<%= form_with model: @genre do |f| %>
  <%= f.label :name, 'ジャンル名' %>
  <%= f.text_field :name, placeholder:@genre.name %>
  <span><%= f.submit '変更を保存' %></span>
<% end %>
</div>
