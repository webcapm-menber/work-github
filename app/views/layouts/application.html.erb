<!DOCTYPE html>
<html>
  <head>
    <title>WorkGithub</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <% if customer_signed_in? %>
        <li>
          <%= link_to "マイページ", public_customers_show_path %>
        </li>
        <li>
          <%= link_to "商品一覧", items_path %>
        </li>
        <li>
          <%= link_to "カート", public_customers_show_path %>
        </li>
        <li>
          <%= link_to "ログアウト(顧客)", destroy_customer_session_path, method: :delete %>
        </li>
      <% elsif admin_signed_in? %>
        <li>
          <%= link_to "商品新規登録", admin_items_path %>
        </li>
        <li>
          <%= link_to "会員一覧", admin_customers_path %>
        </li>
        <li>
          <%= link_to "注文履歴一覧", destroy_admin_session_path, method: :delete %>
        </li>
        <li>
          <%= link_to "ジャンル一覧", genres_path %>
        </li>
        <li>
          <%= link_to "ログアウト(管理)", destroy_admin_session_path, method: :delete %>
        </li>
      <% else %>
        <li>
          <%= link_to "新規登録", new_customer_registration_path %>
        </li>
        <li>
          <%= link_to "ログイン", new_customer_session_path %>
        </li>
      <% end %>
    </header>
    <%= yield %>
  </body>
</html>
