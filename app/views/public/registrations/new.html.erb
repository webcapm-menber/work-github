<div class="container">
  
  <h2>新規会員登録</h2>
  
  <% if flash[:notice] %>
    <%= flash[:notice] %>
  <% end %>
  
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "public/shared/error_messages", resource: resource %>
  
    <div class="row">
      <span class="col-lg-2">名前</span>
      <%= f.label :last_name, "（姓）", class: "col-lg-1" %>
      <%= f.text_field :last_name, autofocus: true, placeholder:"苗字", class: "col-lg-2" %>
      <%= f.label :first_name, "（名）", class: "col-lg-1" %>
      <%= f.text_field :first_name, autofocus: true, placeholder:"名前", class: "col-lg-2" %>
    </div>
    
    <div class="row">
      <span class="col-lg-2">フリガナ</span>
      <%= f.label :last_name_kana, "(セイ)", class: "col-lg-1" %>
      <%= f.text_field :last_name_kana, autofocus: true, placeholder:"ミョウジ", class: "col-lg-2" %>
      <%= f.label :first_name_kana, "(メイ)", class: "col-lg-1" %>
      <%= f.text_field :first_name_kana, autofocus: true, placeholder:"ナマエ", class: "col-lg-2" %>
    </div>
    
    <div class="row">
      <%= f.label :email, "メールアドレス", class: "col-lg-3" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"000@000" %>
    </div>
    
    <div class="row">
      <%= f.label :postal_code, "郵便番号（ハイフンなし）", class: "col-lg-3" %>
      <%= f.text_field :postal_code, placeholder:"0000000" %>
    </div>
    
    <div class="row">
      <%= f.label :address, "住所", class: "col-lg-3" %>
      <%= f.text_field :address, placeholder:"東京都渋谷区芦町2-2", size: "30x30" %>
    </div>
    
    <div class="row">
      <%= f.label :telephone_number, "電話番号（ハイフンなし）", class: "col-lg-3" %>
      <%= f.telephone_field :telephone_number, placeholder:"08011112222" %>
    </div>
    
    <div class="row">
      <span class= "col-lg-3">
        <%= f.label :password, "パスワード" %>
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %>文字以上)</em>
        <% end %>
      </span>
      <span><%= f.password_field :password, autocomplete: "new-password", placeholder:"000000" %></span>
    </div>
  
    <div class="row">
      <%= f.label :password_confirmation, "パスワード(確認用)", class: "col-lg-3" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder:"000000" %>
    </div>
    
    <%= f.submit "新規登録", class: "actions btn btn-outline-success" %>
  <% end %>
  
  <h4>既に登録済みの方</h4>
  <%= render "public/shared/links" %>からログインしてください
  
</div>
