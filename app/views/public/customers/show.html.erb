<div class="container">
  <h1>マイページ</h1>
  <p>登録情報<span><%= link_to " 編集する", public_customers_edit_path %></span></p>
  
  <table class="table table-bordered">
    <tr>
      <th>氏名</th>
      <td><%=@customer.last_name %> <%=@customer.first_name %></td>
    </tr>
    
    <tr>
      <th>カナ</th>
      <td><%=@customer.last_name_kana %> <%=@customer.first_name_kana %></td>
    </tr>
    
    <tr>
      <th>郵便番号</th>
      <td><%=@customer.postal_code %></td>
    </tr>
    
    <tr>
      <th>住所</th>
      <td><%=@customer.address %></td>
    </tr>
    
    <tr>
      <th>電話番号</th>
      <td><%=@customer.telephone_number %></td>
    </tr>
    
    <tr>
      <th>メールアドレス</th>
      <td><%=@customer.email %></td>
    </tr>
    
  </table>
  
  <span>配送先 <%= link_to "一覧を見る", shipping_addresses_path %><span>
  <br>
  <span>注文詳細 <%= link_to "一覧を見る", orders_path %></span>
</div>