<div class="container">
  <h1>会員一覧　</h1>
  <table>

    <tr>
      <th>会員ID</th>
      <th>氏名</th>
      <th>メールアドレス</th>
      <th>ステータス</th>
    </tr>

    <% @customers.each do |customer|%>
      <tr>
        <td><%= customer.id %></td>
        <td>
          <%= link_to admin_customer_path(customer.id) do %>
            <%= customer.last_name %> <%= customer.first_name %>
          <% end %>
        </td>
        <td><%= customer.email %></td>
        <% if customer.is_deleted == true %>
          <td>退会</td>
        <% else %>
          <td>有効</td>
        <% end %>
      </tr>
    <% end %>

  </table>

</div>
