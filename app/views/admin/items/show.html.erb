<div class="container">
  <% if flash[:notice] %>
    <%= flash[:notice] %>
  <% end %>
  <h1>商品詳細</h1>
  

  <%= image_tag @item.image, size: "300x250" %>
  <table>
    <tr>
      <td>商品名</td>
      <td><%= @item.name %></td>
    </tr>
    <tr>
      <td>商品説明</td>
      <td><%= @item.introduction %></td>
    </tr>
    <tr>
      <td>ジャンル</td>
      <td><%= @item.genre.name %></td>
    </tr>
    <tr>
      <td>税込価格<br>(税抜価格)</td>
      <td>
        <%= @item.with_tax_price.to_s(:delimited) %>
        (<%= @item.price.to_s(:delimited) %>)円
      </td>
    </tr>
    <tr>
      <td>販売ステータス</td>
      <% if @item.is_active == true %>
        <td style="color: green">販売中</td>
      <% else %>
        <td>販売停止中</td>
      <% end %>
    </tr>
  </table>
  
  <p><%= link_to '編集する', edit_admin_item_path(@item.id) %></p>
  
</div>