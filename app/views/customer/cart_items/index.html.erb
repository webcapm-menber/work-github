<div class="container">
  <h1>ショッピングカート</h1>
  <%= link_to "カートを空にする", cart_items_destroy_all_path, method: :delete %>
  
  <% if flash[:notice] %>
    <%= flash[:notice] %>
  <% end %>
  
  <table>
    
    <thead>
      <th>商品名</th>
      <th>単価（税込）</th>
      <th>数量</th>
      <th>小計</th>
      <th></th>
    </thead>
    
    <tbody>
      <% @cart_items.each do |cart_item| %>
        <%= form_with model: cart_item, url: cart_item_path(cart_item.id), method: :patch do |f| %>
          <tr>
            <td>
              <%= image_tag cart_item.item.image, size: "30x30"%>
              <%= cart_item.item.name %>
            </td>
            <td><%= cart_item.item.with_tax_price.to_s(:delimited) %></td>
            <td><%= f.select :amount, *[cart_item.amount..cart_item.amount + 20] %> <%= f.submit "変更" %></td>
            <td><%= cart_item.subtotal.to_s(:delimited) %></td>
            <td><%= link_to "削除", cart_item_path(cart_item.id), method: :delete %></td>
          </tr>
        <% end %>
      <% end %>
    </tbody>
    
  </table>
  
  <div>
    <%= link_to "買い物を続ける", public_root_path %>
    <p>合計金額</p>
    <p><%= @total %></p>
  </div>
  
  <div>
    <%= link_to "情報入力に進む", new_order_path %>
  </div>
  
</div>